<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="#7E8AA2"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/labelTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/foodImage"
        android:text="Tên món:"
        android:textStyle="bold"
        android:textColor="#FFFF"
        />

    <TextView
        android:id="@+id/text_TenMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/labelTen"
        android:text="Cơm chiên"

        />

    <TextView
        android:id="@+id/labelGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_TenMon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/foodImage"
        android:text="Giá:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_Gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_TenMon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/labelTen"
        android:text="10$"

        />

    <TextView
        android:id="@+id/labelMieuTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Gia"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/foodImage"
        android:text="Miêu tả:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_MieuTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Gia"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/labelTen"
        android:text="Ngon bổ rẽ !" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_alignBottom="@+id/foodImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:buttonTint="#FFFF"
        />

    </RelativeLayout>
</RelativeLayout>