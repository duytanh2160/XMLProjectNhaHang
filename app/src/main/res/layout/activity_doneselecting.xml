<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="#EE602B"
    android:clickable="false"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="157dp"
            android:layout_height="162dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/labelTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/foodImage"
            android:text="TÊN MÓN:"
            android:textColor="#FFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_TenMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/labelTen"
            android:hint="tên món"
            android:textColor="#FFFF"
            />

        <TextView
            android:id="@+id/labelGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_TenMon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/foodImage"
            android:text="Giá:"
            android:textColor="#FFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labelFoodSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_Gia"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/foodImage"
            android:text="CHỌN PHẦN:"
            android:textColor="#FFFF"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerFoodSize"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_Gia"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/labelFoodSize" />

        <TextView
            android:id="@+id/labelFoodNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerFoodSize"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/foodImage"
            android:text="SỐ LƯỢNG:"
            android:textColor="#FFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_SoLuong"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerFoodSize"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/labelFoodNumber"
            android:ems="10"
            android:inputType="number"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/labelTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_SoLuong"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/foodImage"
            android:text="TỔNG TIỀN:"
            android:textColor="#FFFF"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_ItemTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_below="@+id/editText_SoLuong"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/labelTotalPrice"
            android:text="0"
            android:textColor="#FFFF"
            />

        <TextView
            android:id="@+id/text_Gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_TenMon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/labelTen"
            android:text="vnd"
            android:textColor="#FFFF"

            />
    </RelativeLayout>
</RelativeLayout>